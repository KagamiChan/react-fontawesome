{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "never"],
    "max-line-length": [true, 140],
    "trailing-comma": [true, {"esSpecCompliant": true}],
    "prettier": true
  },
  "rulesDirectory": ["tslint-plugin-prettier"]
}
